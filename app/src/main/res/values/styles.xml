<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TagsSelectionTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <style name="WelcomeTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <style name="NotificationDialogAnimation">
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
    </style>

    <style name="tagChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIcon">@null</item>
        <item name="chipIcon">@null</item>
        <item name="chipIconTint">@color/chip_icon_tint</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="chipCornerRadius">@dimen/_18sdp</item>
        <item name="android:textSize">@dimen/_164sdp</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="chipStartPadding">@dimen/_8sdp</item>
        <item name="chipEndPadding">@dimen/_8sdp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_state</item>
        <item name="chipStrokeWidth">@dimen/_1sdp</item>
        <item name="chipBackgroundColor">@color/tags_chip_bg_color_state</item>
    </style>

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
